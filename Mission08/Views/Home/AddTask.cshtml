@model MyTask


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center">Task Form</h2>
                <form method="post">
                    <input type="hidden" asp-for="TaskId" />

                    <div class="mb-3">
                        <label asp-for="TaskName" class="form-label">Task</label>
                        <input asp-for="TaskName" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label">Due Date (YYYY-MM-DD)</label>
                        <input asp-for="DueDate" type="date" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quadrant" class="form-label">Quadrant</label>
                        <input asp-for="Quadrant" class="form-control" required value="1" min="1" max="4" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-select">
                            <option value="">Select Category</option>
                            @foreach (Category c in ViewBag.Categories)
                            {
                                <option value="@c.CategoryId">@c.CategoryName</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Completed" class="form-label">Completed?</label>
                        <select asp-for="Completed" class="form-select">
                            <option value="">Select</option>
                            <option value="True">Yes</option>
                            <option value="False">No</option>
                        </select>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit Task</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

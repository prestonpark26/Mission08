@{
}

@model MyTask

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-danger text-center">Deletion Confirmation</h2>
                <h3 class="text-center">@Model.TaskName</h3>
                <form method="post" class="text-center">
                    <input type="hidden" asp-for="TaskId" />
                    <div class="mt-3">
                        <button type="submit" class="btn btn-danger me-2">Delete</button>
                        <a class="btn btn-secondary" asp-controller="Home" asp-action="Quadrants">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
